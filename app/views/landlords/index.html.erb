<%= render :partial => 'sub_menu' %>
<div class="col-md-9 col-lg-10">
  <div class="table-responsive">
    <table id="table-list-landlord" class="table table-sm table-hover table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Fistname</th>
          <th>Lastname</th>
          <th>Address</th>
          <th>Zip Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @landlords.each do |landlord| %>
        <tr>
          <td><%= landlord.firstname %></td>
          <td><%= landlord.lastname %></td>
          <td><%= landlord.address %></td>
          <td><%= landlord.zip_code %></td>
          <td>
            <%= link_to edit_landlord_path(landlord.id), class: 'btn btn-link', style: 'display: inline-block;' do %>
              <span class="ion-edit size-16"></span>
            <% end %>
            <%= button_to '#', class: 'btn btn-link', style: 'display: inline-block;', method: 'delete' do %>
              <span class="ion-ios-trash size-16"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>