<%= render :partial => 'sub_menu' %>

<div class="col-md-9 col-lg-10">

  <h2>Create a new Landlord</h2>

  <div class="some-space hidden-md-up"></div>

  <div class="col-md-5">
    <%= form_tag(landlords_path, method: 'post') do %>
      
      <div class="form-group">
        <%= label_tag(:firstname, 'Firstname') %>
