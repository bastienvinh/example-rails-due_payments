      </div>

      <div class="form-group">
        <%= label_tag(:lastname, 'Lastname') %>
        <%= text_field_tag(:lastname, nil, :placeholder => 'Enter your lastname here', :class => 'form-control' ) %>
      </div>

      <div class="form-group">
        <%= label_tag(:firstname, 'Firstname') %>
        <%= text_field_tag(:firstname, nil, :placeholder => 'Enter your firstname here', :class => 'form-control' ) %>
      </div>

      <div class="form-group">
        <%= label_tag(:firstname, 'Firstname') %>
        <%= text_field_tag(:firstname, nil, :placeholder => 'Enter your firstname here', :class => 'form-control' ) %>
      </div>

      <%= submit_tag("Submit", :class => 'btn btn-primary') %>

    <% end %>
  </div>


</div>